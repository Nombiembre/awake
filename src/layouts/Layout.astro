---
import Head from "~/components/common/Head.astro";
import Header from "~/components/common/Header.astro";
import AsideMenu from "~/components/common/AsideMenu.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <Head title={title} />
  <body class="h-screen">
    <div id="app" class="h-screen">
      <Header />
      <aside class="[grid-area:aside] border-r border-gray-300 py-4 px-2">
        <AsideMenu transition:name="aside-menu" />
      </aside>
      <main class="[grid-area:main] bg-zinc-50 px-40 py-10">
        <slot />
      </main>
    </div>
  </body>
</html>

<style is:global>
	#app {
		display: grid;
		grid-template-areas:
			"header header header"
			"aside main main";
		grid-template-columns: 200px 1fr;
		grid-template-rows: auto 1fr;
	
    font-family: "Onest", system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif,sans-serif;
  }
</style>
