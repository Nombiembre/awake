---
import Head from "~/components/common/Head.astro";
import AsideMenu from "~/components/common/AsideMenu.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <Head title={title} />
  <body class="h-screen bg-zinc-50">
    <div id="app" class="h-screen">
      <aside id="aside-navigation" class="[grid-area:aside] bg-white border-r border-gray-300 py-4 px-2 ">
        <AsideMenu transition:name="aside-menu" />
      </aside>
      <main class="[grid-area:main] bg-zinc-50 px-4 md:px-32 py-4 md:py-10" transition:animate="fade">
        <slot />
      </main>
    </div>
  </body>
</html>

<style is:global>
	#app {
		display: grid;
		grid-template-areas:
			"aside main main";
		grid-template-columns: auto 1fr;

    font-family: "Onest", system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif,sans-serif;
  }

</style>
